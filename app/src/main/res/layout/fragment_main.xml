<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_space">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        style="@style/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCharacters"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:background="@drawable/gem_red"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/text_button_characters"
        style="@style/button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComics"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:adjustViewBounds="true"
        android:background="@drawable/gem_green"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/text_button_comics"
        style="@style/button_text"
        app:layout_constraintEnd_toStartOf="@id/btnCShopsLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCharacters"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCShopsLocation"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:adjustViewBounds="true"
        android:background="@drawable/gem_blue"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/text_button_location"
        style="@style/button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnComics"
        app:layout_constraintTop_toBottomOf="@id/btnCharacters"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author"
        style="@style/author_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>