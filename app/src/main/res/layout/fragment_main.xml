<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_16"
    android:background="@drawable/bg_space">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_64"
        style="@style/marvel_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCharacters"
        android:layout_width="@dimen/size_140"
        android:layout_height="@dimen/size_50"
        android:adjustViewBounds="true"
        android:background="@drawable/gem_red"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/text_button_characters"
        android:textSize="@dimen/text_size_20"
        style="@style/marvel_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnComics"
        android:layout_width="@dimen/size_140"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/margin_64"
        android:adjustViewBounds="true"
        android:background="@drawable/gem_green"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/text_button_comics"
        android:textSize="@dimen/text_size_20"
        style="@style/marvel_text"
        app:layout_constraintEnd_toStartOf="@id/btnShopLocation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCharacters"
        tools:ignore="ContentDescription" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnShopLocation"
        android:layout_width="@dimen/size_140"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/margin_64"
        android:adjustViewBounds="true"
        android:background="@drawable/gem_blue"
        android:gravity="center"
        android:scaleType="fitXY"
        android:text="@string/text_button_location"
        android:textSize="@dimen/text_size_20"
        style="@style/marvel_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnComics"
        app:layout_constraintTop_toBottomOf="@id/btnCharacters"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/author"
        style="@style/marvel_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>