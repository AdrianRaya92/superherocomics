<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_dest">

    <fragment
        android:id="@+id/main_dest"
        android:name="com.ayardreams.superherocomics.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >

        <action
            android:id="@+id/action_main_to_characters"
            app:destination="@id/characters_dest" />
    </fragment>

    <fragment
        android:id="@+id/characters_dest"
        android:name="com.ayardreams.superherocomics.ui.characters.ComicsFragment"
        android:label="fragment_characters"
        tools:layout="@layout/fragment_comics" >
    </fragment>
</navigation>